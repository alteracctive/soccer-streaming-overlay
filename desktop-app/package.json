{
  "name": "soccer-streaming-overlay-app",
  "version": "1.0.0",
  "description": "Soccer Streaming Overlay Control Panel",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder --win"
  },
  "keywords": [],
  "author": "Your Name",
  "license": "ISC",
  "devDependencies": {
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.yourname.soccerstreamingoverlay",
    "productName": "Soccer Streaming Overlay",
    "artifactName": "soccer-streaming-overlay.exe",
    "files": [
      "main.js",
      "dist/**/*"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources"
      }
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "portable",
      "icon": "icon.ico"
    }
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0"
  }
}
